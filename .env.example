# Server Config
PORT=3000
NODE_ENV=development
BASE_URL=instanthost.site

# Database
# For SQLite:
SQLITE_DB_PATH=./server/db/dev.sqlite
# For PostgreSQL:
# DATABASE_URL=postgres://user:pass@localhost:5432/instanthost

# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=instanthost-sites

# Email (SMTP)
EMAIL_FROM=hello@instanthost.site
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email
SMTP_PASS=your_app_password

# Rate Limiting
# ANONYMOUS_LIMIT=5/hour
# AUTHENTICATED_LIMIT=60/hour
